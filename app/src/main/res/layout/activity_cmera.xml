<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/camera_preview">

    <Chronometer
        android:id="@+id/recorded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceListItemSmall"
        android:visibility="invisible"
        android:layout_gravity="right|top"
        android:layout_margin="10dp"
        android:textColor="@color/fab_material_red_500"/>

    <com.software.shell.fab.ActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|bottom"
        android:layout_margin="8dp"
        android:visibility="invisible"
        fab:button_color="@color/fab_material_red_500"
        fab:button_colorPressed="@color/fab_material_red_900"
        fab:shadow_color="@color/fab_material_red_900"
        fab:show_animation="@anim/fab_jump_from_down"
        fab:hide_animation="@anim/fab_jump_to_down"/>
</FrameLayout>